#!/bin/bash
#############################################
# author:fang
# version : v1.0
# name  : install
# dispcripe: install for linux bashrc
# CopyRight@fangyunjiang[42550564@qq.com]
#############################################

_src_path=~/command/linux
_backdir=".linux_backup"
_platforms=0
_targets=0
targets_bash=1
platforms_windows=1
platforms_macosx=2
platforms_linux=3

function install_single()
{
    local src_file dest_file suffer
    src_file=$1;dest_file=$2
    suffer=$(date '+%Y-%m-%d-%H-%M-%S')
    echo "backup $dest_file"
    mv ~/${dest_file} ~/${_backdir}/${dest_file}-${suffer} 2>/dev/null
    echo "install $dest_file"
    if (($_platforms&$platforms_windows));then
        cp ${_src_path}/$src_file ~/$dest_file
    else
        ln -s ${_src_path}/$src_file ~/$dest_file
    fi
}

function install_bash()
{
    if (($_platforms&$platforms_linux));then
      mkdir -p $HOME/.Trash
    fi
    if ! (($_platforms&$platforms_windows));then
    	sudo chmod 666 /etc/profile
    	sudo sed -i '/\/etc\/bashrc/a\\t[ -r ~/.bashrc ] && . ~/.bashrc' /etc/profile
    	sudo chmod 444 /etc/profile
    fi
    install_single bash/.bashrc .bashrc
    install_single bash/.inputrc .inputrc
    install_single bash/.gitconfig .gitconfig
    install_single bash/.mongorc.js .mongorc.js
    if (($_platforms&$platforms_windows));then
        mkdir -p $HOME/.Trash
        install_single bash/.minttyrc .minttyrc
        install_single bash/.dir_colors .dir_colors
    fi
}

function install()
{
    cd ~
    mkdir -p ${_backdir}
    if (($_targets&$targets_bash));then
        install_bash
    fi
}

function show_help()
{
    echo "install [-p[platforms]|-t[targets]]"
    echo "  -p [platforms]:platforms as follows:"
    echo "      windows macosx linux"
    echo "      uses: -p windows"
    echo "      default: windows"
    echo "  -t [targets]:targets as follows:"
    echo "      bash all"
    echo "      uses: -t bash"
    echo "      uses: -p all"
    echo "      default: bash"
}

function main()
{
    local has_oper all bash windows macosx linux

    bash=$targets_bash
    windows=$platforms_windows
    macosx=$platforms_macosx
    linux=$platforms_linux

    has_oper=0
    while getopts :p:t:h opt;do
        has_oper=1
        case $opt in
            p)all=7;_platforms=$(($OPTARG));;
            t)all=3;_targets=$(($OPTARG));;
            *)show_help;exit;;
        esac
    done
    [ $has_oper -eq 0 ] && show_help && exit

    install
}

main "$@"
