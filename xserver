#!/usr/local/bin/node

var express = require('express');
var app = express();
app.use(express.static('.'));
app.get("/mz/*", function (req, res) {
    var img = req.url.replace('/mz/', '');
    var html = `
    <!DOCTYPE html>
    <html>
    <head>
        <style>
            .img {
                width: 100%;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
            }
        </style>
    </head>
    <body style="background:red;">
        <img src="../${img}" class="img">
    </body>
    </html>
    `;
    res.send(html);
});
var server = app.listen(3001, function() {console.log('http://localhost:3001');});
